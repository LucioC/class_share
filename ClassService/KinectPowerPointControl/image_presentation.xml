<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" xml:lang="en-US" mode="voice" root= "Expression"
xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">

  <rule id="Expression" scope="public">
    <one-of>
      <item>
        <ruleref uri ="#Move" type="application/srgs+xml"/>
        <tag>out.command=rules.latest();</tag>
        <item repeat="0-1">
          <ruleref uri ="#NumberTimes" type="application/srgs+xml"/>
          times
          <tag>out.multiplier=rules.NumberTimes;</tag>
        </item>
      </item>
      <item>
        <ruleref uri ="#Rotation" type="application/srgs+xml"/>
        <tag>out.command=rules.latest();</tag>
      </item>
      <item>
        <one-of>
          <item>
            <ruleref uri ="#ZoomInOut" type="application/srgs+xml"/>
            <tag>out.command=rules.latest();</tag>
            <one-of>
              <item repeat="0-1">
                <ruleref uri ="#NumberTimes" type="application/srgs+xml"/>
                times
                <tag>out.multiplier=rules.NumberTimes;</tag>
              </item>
              <item repeat="0-1">
                <ruleref uri ="#NumberPercentage" type="application/srgs+xml"/>
                <tag>out.multiplier=rules.NumberPercentage;</tag>
              </item>
            </one-of>
          </item>
          
        </one-of>
        
      </item>
      <item>
        <ruleref uri ="#Close" type="application/srgs+xml"/>
        <tag>out.command=rules.latest();</tag>
      </item>
    </one-of>
  </rule>

  <rule id="ZoomInOut">
    <one-of>
      <item>
        zoom
        <one-of>
          <item>
            in <tag>out = "zoomin"; </tag>
          </item>
          <item>
            out <tag>out = "zoomout"; </tag>
          </item>
        </one-of>
      </item>
      <item>
        <one-of>
          <item>
            enlarge <tag>out = "zoomin"; </tag>
          </item>
          <item>
            reduce <tag>out = "zoomout"; </tag>
          </item>
        </one-of>
      </item>
    </one-of>
  </rule>

  <rule id="Close">
    <one-of>
      <item>
        close file <tag>out = "closeimage"; </tag>
      </item>
    </one-of>
  </rule>

  <rule id="Rotation">
    rotate
    <one-of>
      <item>
        right <tag>out = "rotateright"; </tag>
      </item>
      <item>
        left <tag>out = "rotateleft"; </tag>
      </item>
    </one-of>
  </rule>

  <rule id="Move">
    move
    <one-of>
      <item>
        right <tag>out = "moveright"; </tag>
      </item>
      <item>
        left <tag>out = "moveleft"; </tag>
      </item>
      <item>
        up <tag>out = "moveup"; </tag>
      </item>
      <item>
        down <tag>out = "movedown"; </tag>
      </item>
    </one-of>
  </rule>

  <rule id="NumberTimes">
    <tag>out=1;</tag> <!-- 1 is default if nothing said -->
    <one-of>
      <item>
        one <tag>out = 1; </tag>
      </item>
      <item>
        two <tag>out = 2; </tag>
      </item>
      <item>
        three <tag>out = 3; </tag>
      </item>
      <item>
        four <tag>out = 4; </tag>
      </item>
      <item>
        five <tag>out = 5; </tag>
      </item>
      <item>
        six <tag>out = 6; </tag>
      </item>
      <item>
        seven <tag>out = 7; </tag>
      </item>
      <item>
        eight <tag>out = 8; </tag>
      </item>
      <item>
        nine <tag>out = 9; </tag>
      </item>
      <item>
        ten <tag>out = 10; </tag>
      </item>
      <item>
        eleven <tag>out = 11; </tag>
      </item>
      <item>
        twelve <tag>out = 12; </tag>
      </item>
      <item>
        thirteen <tag>out = 13; </tag>
      </item>
      <item>
        fourteen <tag>out = 14; </tag>
      </item>
      <item>
        fifteen <tag>out = 15; </tag>
      </item>
      <item>
        sixteen <tag>out = 16; </tag>
      </item>
      <item>
        seventeen <tag>out = 17; </tag>
      </item>
      <item>
        eighteen <tag>out = 18; </tag>
      </item>
      <item>
        nineteen <tag>out = 19; </tag>
      </item>
      <item>
        twenty <tag>out = 20; </tag>
      </item>
    </one-of>
  </rule>

  <rule id="NumberPercentage">
    <!-- 1 is default if nothing said -->
    <one-of>
      <item>
        ten <tag>out = 0.1; </tag>
      </item>
      <item>
        twenty <tag>out = 0.2; </tag>
      </item>
      <item>
        thirty <tag>out = 0.3; </tag>
      </item>
      <item>
        forty <tag>out = 0.4; </tag>
      </item>
      <item>
        fifty <tag>out = 0.5; </tag>
      </item>
      <item>
        sixty <tag>out = 0.6; </tag>
      </item>
      <item>
        seventy <tag>out = 0.7; </tag>
      </item>
      <item>
        eighty <tag>out = 0.8; </tag>
      </item>
      <item>
        ninety <tag>out = 0.9; </tag>
      </item>
      <item>
        one hundred <tag>out = 1; </tag>
      </item>
    </one-of>
    percent
  </rule>
</grammar>