<Window x:Class="KinectPowerPointControl.KinectControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect PowerPoint Control"
        Height="480"
        Width="640" Loaded="Window_Loaded">
    <Viewbox Stretch="Uniform">
        <Grid>
            <Image Name="videoImage"
                   Width="640"
                   Height="480"></Image>
            <Canvas Background="Transparent">
                <Ellipse Fill="Lime"
                         Height="10"
                         Width="10"
                         Name="ellipseLeftHand"
                         Stroke="White" />
                <Ellipse Fill="#FF950000"
                         Height="10"
                         Width="10"
                         Name="ellipseRightHand"
                         Stroke="White" />
                <Ellipse Fill="#FF950000"
                         Height="10"
                         Width="10"
                         Name="ellipseRightWrist"
                         Stroke="White" />
                <Ellipse Fill="#FF950000"
                         Height="10"
                         Width="10"
                         Name="ellipseLeftWrist"
                         Stroke="White" />
                <Ellipse Fill="#FF950000"
                         Height="10"
                         Width="10"
                         Name="ellipseRightElbow"
                         Stroke="White" />
                <Ellipse Fill="#FF950000"
                         Height="10"
                         Width="10"
                         Name="ellipseLeftElbow"
                         Stroke="White" />
                <Ellipse Fill="#FF950000"
                         Height="10"
                         Width="10"
                         Name="ellipseHead"
                         Stroke="White" />
                <Ellipse Fill="#FF950000"
                         Height="10"
                         Width="10"
                         Name="ellipseCenterShoulder"
                         Stroke="White" />
                <Ellipse Fill="#FF950000"
                         Height="10"
                         Width="10"
                         Name="ellipseRightShoulder"
                         Stroke="White" />
                <Ellipse Fill="#FF950000"
                         Height="10"
                         Width="10"
                         Name="ellipseLeftShoulder"
                         Stroke="White" />
                <Ellipse Fill="#FF950000"
                         Height="10"
                         Width="10"
                         Name="ellipseSpine"
                         Stroke="White" />
                <Ellipse Fill="#FF950000"
                         Height="10"
                         Width="10"
                         Name="ellipseCenterHip"
                         Stroke="White" />
            </Canvas>
        </Grid>
    </Viewbox>
</Window>
